<h3>Follow Users</h3>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
			<th></th>
			<th></th>
			<th colspan="3"></th>
		</tr>
	</thead>
  <% @user.followeruser.each do |user| %>
  <tbody>
  <tr>
    <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
    <td>  <%= user.name %> </td>
    <td>フォロー数:<%= user.followeruser.count %></td>
    <td>フォロワー数:<%= user.followeduser.count %></td>
    <td><%= link_to 'show', user_path(user) %></td>
  </tr>
  </tbody>
  <% end %>
</table>