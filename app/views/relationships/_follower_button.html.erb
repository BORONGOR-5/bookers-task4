<% unless current_user == user %>
  <% if current_user.followeruser?(user) %>
    <%= form_for(current_user.relationships.find_by(follower_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follower_id, user.id %>
      <%= f.submit 'Unfollower', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :follower_id, user.id %>
      <%= f.submit 'Follower', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>